rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profile-pictures/{userId} {
      // Allow read access to anyone
      allow read;
      
      // Allow write access only to the authenticated user who owns the profile
      // and if the uploaded file is under 5MB.
      // Removed contentType check for better compatibility.
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
