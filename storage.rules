rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all files for authenticated users.
    // This is a common starting point. You should secure this further
    // based on your app's specific needs (e.g., allowing users to
    // only access their own files).
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
