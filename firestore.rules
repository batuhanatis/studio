
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and update their own profiles.
    // They cannot create their profile with this rule, that is handled by the `create` rule below.
    // They cannot modify their 'friends' array directly.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // New users can create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create, read, and delete friend requests intended for them or sent by them.
    // Users can update the status of requests sent to them (to accept them).
    match /friendRequests/{requestId} {
      allow read, delete, create: if request.auth != null && (request.auth.uid == resource.data.toUserId || request.auth.uid == resource.data.fromUserId);
      allow update: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }

    // Users can create, read, update, and delete their own watchlists.
    match /watchlists/{listId} {
      allow read, update, delete, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users can create recommendations for others.
    // Users can read recommendations sent to them.
    match /recommendations/{recommendationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }
  }
}
