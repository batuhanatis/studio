rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if request.auth.uid == userId;

      // A user can read their own profile, or the profile of a friend.
      allow read: if request.auth.uid == userId || 
                  (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.friends.hasAny([userId]));

      // A user can only update or delete their own profile.
      allow update, delete: if request.auth.uid == userId;
    }
    
    match /watchlists/{listId} {
      // A user can create a watchlist for themself.
      allow create: if request.resource.data.userId == request.auth.uid;

      // A user can only read, update, or delete their own watchlists.
      allow read, update, delete: if resource.data.userId == request.auth.uid;
    }
    
    match /friendRequests/{requestId} {
      // The recipient can act on a friend request.
      allow read, update, delete: if request.auth.uid == resource.data.toUserId;

      // A user can only send a request from themself.
      allow create: if request.resource.data.fromUserId == request.auth.uid;
    }

    match /recommendations/{recommendationId} {
      // The recipient can read a recommendation.
      allow read: if request.auth.uid == resource.data.toUserId;
      
      // A user can only send a recommendation from themself.
      allow create: if request.resource.data.fromUserId == request.auth.uid;
    }
  }
}
