rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // UYARI: Bu kurallar hata ayıklama amaçlıdır ve production için güvenli değildir.
    // Giriş yapmış herhangi bir kullanıcının tüm verileri okumasına ve yazmasına izin verir.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
