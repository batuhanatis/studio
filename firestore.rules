rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // - A user can create their own profile upon signup.
    // - A user can only read or update their own profile after creation.
    // - Nobody can delete a user profile.
    // - Nobody can see the full list of users.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Friend Requests Collection
    // - Logged-in users can create new friend requests.
    // - Users can read requests sent to them or by them.
    // - A user can update/delete a request sent to them (accept/decline).
    // - A user can update a request they sent (if the status changes to 'accepted').
    match /friendRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.toUserId == request.auth.uid || resource.data.fromUserId == request.auth.uid);
      allow update, delete: if request.auth != null && resource.data.toUserId == request.auth.uid;
      allow update: if request.auth != null && resource.data.fromUserId == request.auth.uid && request.resource.data.status == 'accepted';
    }

    // Watchlists Collection
    // - A user can create/read/update/delete their own watchlists.
    // - Nobody can see other users' watchlists.
    match /watchlists/{listId} {
        allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Recommendations Collection
    // - Logged-in users can create new recommendations (send to a friend).
    // - A user can only read recommendations sent to them.
    // - Nobody can update or delete recommendations after they are sent.
    match /recommendations/{recommendationId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && resource.data.toUserId == request.auth.uid;
        allow update, delete: if false;
    }
  }
}
