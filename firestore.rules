rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only create their own profile, can read any profile,
    // and can only update their own profile. No one can delete user profiles.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false; 
    }

    // Users can create/read/update/delete their own watchlists.
    match /watchlists/{listId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Users can send recommendations to others.
    // Users can read and delete recommendations sent to them.
    match /recommendations/{recId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUserId;
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }

    // Users can send friend requests.
    // Users can accept/decline (update/delete) requests sent to them.
    match /friendRequests/{reqId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUserId;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
    }
  }
}
