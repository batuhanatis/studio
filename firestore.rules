rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own profile.
    // Friends can read a user's profile if they are on the friends list.
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.friends.hasAny([userId])
      );
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // A user can create, read, update, and delete their own watchlists.
    match /watchlists/{listId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // The recipient of a friend request can read, update, or delete it.
    // Any logged-in user can create a friend request.
    match /friendRequests/{requestId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
      allow create: if request.auth != null;
    }

    // The recipient of a recommendation can read it.
    // Any logged-in user can create a recommendation.
    match /recommendations/{recommendationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.toUserId;
      allow create: if request.auth != null;
    }
  }
}
