rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    // Any authenticated user can read public profile data (for searching friends, blend).
    // A user can only create, update, and delete their own profile document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // FRIEND REQUESTS
    // Users can read requests they've sent or received.
    // Users can create requests only from their own ID.
    // Users can update/delete requests they've sent or received.
    match /friendRequests/{requestId} {
      allow read, update, delete: if request.auth.uid == resource.data.fromUserId || request.auth.uid == resource.data.toUserId;
      allow create: if request.auth.uid == request.resource.data.fromUserId;
    }

    // WATCHLISTS
    // A user can only create/read/update/delete their own watchlists.
    match /watchlists/{listId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // RECOMMENDATIONS
    // A user can create recommendations from their own ID.
    // Only the recipient can read or delete a recommendation.
    match /recommendations/{recommendationId} {
      allow create: if request.auth.uid == request.resource.data.fromUserId;
      allow read, delete: if request.auth.uid == request.resource.data.toUserId;
    }
  }
}
