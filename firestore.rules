rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own profile document.
    // A user can create their own document during registration.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Users can create, read, update, and delete their own watchlists.
    match /watchlists/{listId} {
      allow read, update, delete: if resource.data.userId == request.auth.uid;
      allow create: if request.resource.data.userId == request.auth.uid;
    }
    
    // Users can create recommendations for others.
    // Users can only read recommendations sent to them.
    match /recommendations/{recommendationId} {
      allow read: if resource.data.toUserId == request.auth.uid;
      allow create: if request.resource.data.fromUserId == request.auth.uid;
    }
    
    // Friend requests can be created by the sender.
    // They can be read by either the sender or receiver.
    // They can be updated or deleted by the receiver (to accept/deny).
    match /friendRequests/{requestId} {
      allow read: if resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid;
      allow create: if request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if resource.data.toUserId == request.auth.uid;
    }
  }
}
