rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create their own profile.
    // They can read/update/delete their own profile.
    // Friends can read a user's profile if they are on that user's friends list.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && (
        request.auth.uid == userId ||
        (resource.data.friends.hasAny([request.auth.uid]) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.friends.hasAny([userId]))
      );
    }

    // A user can manage their own watchlists.
    match /watchlists/{listId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // The recipient of a friend request can read, update, or delete it.
    // Any logged-in user can create a friend request.
    match /friendRequests/{requestId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.toUserId;
      allow create: if request.auth != null;
    }

    // The recipient of a recommendation can read it.
    // Any logged-in user can create a recommendation.
    match /recommendations/{recommendationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.toUserId;
      allow create: if request.auth != null;
    }
  }
}
